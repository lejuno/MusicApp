<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.musicapp.MySongsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/string_my_songs_activity_description"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_list_item_1">

                <TextView
                    android:id="@+id/id_item_1"
                    style="@style/StyleMySongItem"
                    android:text="@string/string_found_song_example" />

                <Button
                    android:id="@+id/id_play_item_1"
                    style="@style/StylePlayButton" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_list_item_2">

                <TextView
                    android:id="@+id/id_item_2"
                    style="@style/StyleMySongItem"
                    android:text="@string/string_history_2" />

                <Button
                    android:id="@+id/id_play_item_2"
                    style="@style/StylePlayButton" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_list_item_3">

                <TextView
                    android:id="@+id/id_item_3"
                    style="@style/StyleMySongItem"
                    android:text="@string/string_history_3" />

                <Button
                    android:id="@+id/id_play_item_3"
                    style="@style/StylePlayButton" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_list_item_4">

                <TextView
                    android:id="@+id/id_item_4"
                    style="@style/StyleMySongItem"
                    android:text="@string/string_history_4" />

                <Button
                    android:id="@+id/id_play_item_4"
                    style="@style/StylePlayButton" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_list_item_5">

                <TextView
                    android:id="@+id/id_item_5"
                    style="@style/StyleMySongItem"
                    android:text="@string/string_history_5" />

                <Button
                    android:id="@+id/id_play_item_5"
                    style="@style/StylePlayButton" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_list_item_5">

                <TextView
                    android:id="@+id/id_item_6"
                    style="@style/StyleMySongItem"
                    android:text="@string/string_history_6" />

                <Button
                    android:id="@+id/id_play_item_6"
                    style="@style/StylePlayButton" />
            </RelativeLayout>

            <include layout="@layout/layout_button_return_search" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
