<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.musicapp.TopHitsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/string_top_hits_activity_description"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_item_1"
                style="@style/StyleTopHitsItem"
                android:background="@color/color_list_item_1"
                android:text="@string/string_top_1" />

            <TextView
                android:id="@+id/id_item_2"
                style="@style/StyleTopHitsItem"
                android:background="@color/color_list_item_2"
                android:text="@string/string_top_2" />

            <TextView
                android:id="@+id/id_item_3"
                style="@style/StyleTopHitsItem"
                android:background="@color/color_list_item_3"
                android:text="@string/string_top_3" />

            <TextView
                android:id="@+id/id_item_4"
                style="@style/StyleTopHitsItem"
                android:background="@color/color_list_item_4"
                android:text="@string/string_top_4" />

            <TextView
                android:id="@+id/id_item_5"
                style="@style/StyleTopHitsItem"
                android:background="@color/color_list_item_5"
                android:text="@string/string_top_5" />

            <TextView
                android:id="@+id/id_item_6"
                style="@style/StyleTopHitsItem"
                android:background="@color/color_list_item_6"
                android:text="@string/string_top_6" />

            <include layout="@layout/layout_button_return_search"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
